<resources>  
    <style name="MAHUpdaterDialogAnimation">
    	<item name="android:windowEnterAnimation">@anim/a1_fade_in_scale</item>
    	<item name="android:windowExitAnimation">@anim/a1_fade_out_scale</item>
	</style>

	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<!-- Customize your theme here. -->
	</style>

	<!-- DIALOG STYLE -->
	<style name="MAHRestricterDlg" parent="AppTheme" >
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:windowIsFloating">true</item>
	</style>

	<style name="MAHUpdaterDlg" parent="AppTheme" >
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:windowIsFloating">true</item>
	</style>

	<style name="MAHBtnBaseStyle" parent="Widget.AppCompat.Button">
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingLeft">13dp</item>
		<item name="android:paddingRight">13dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:minWidth">120dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textAllCaps">true</item>

	</style>

	<style name="MAHBtn1Style" parent="MAHBtnBaseStyle">
		<item name="android:background">@drawable/mah_btn1_background_selector</item>
		<item name="android:textColor">@drawable/mah_btn1_text_selector</item>
	</style>

	<style name="MAHBtn2Style" parent="MAHBtnBaseStyle">
		<item name="android:background">@drawable/mah_btn2_background_selector</item>
		<item name="android:textColor">@drawable/mah_btn2_text_selector</item>
	</style>

</resources>
